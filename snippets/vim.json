{
  "head": {
    "prefix": "head",
    "body": [
      "\" ${1}",
      "" Last Change: `!v strftime(\"%Y-%m-%d\")`",
      "" Author: Kong Jun <kongjun18@outlook.com>",
      "" Github: https://github.com/kongjun18",
      "" License: ${2:GPL-2.0}",
      "$3"
    ],
    "description": "header for vimscript"
  },
  "linefeed": {
    "prefix": "linefeed",
    "body": [
      "let s:save_cpo = &cpo",
      "let s:save_cpo = &cpo",
      "set cpo&vim",
      "${VISUAL}$1",
      "let &cpo = s:save_cpo",
      "unlet s:save_cpo",
      "$2"
    ]
    "description": "avoid line-continuation problem",
  },
  "gvar": {
    "prefix": "gvar",
    "body": [
      "if !exists(\"g:${1:var}\"')",
      "let g:$1 = ${2:\"${3:default}\"}",
      "endif"
    ]
    "description": "Global / configuration variable"
  },
  "map": {
    "prefix": "map",
    "body": [
      "if !hasmapto(${1:map_name})",
      "map <unique> ${2:map_sequence}",
      "endif${3}"
    ],
    "description": "Add map"
  },
  "command": {
    "prefix": "command",
    "body": [
      "if !exists(${1:command_name})",
      "command $2",
      "endif$3"
    ]
  }
}
