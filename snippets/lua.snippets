snippet #!
	#!/usr/bin/env lua
	$1
snippet local
	local ${1:x} = ${0:1}
snippet for
	for ${1:i}=${2:1},${3:10} do
		${0:print(i)}
	end
snippet forp
	for ${1:i},${2:v} in pairs(${3:table_name}) do
		${0:-- body}
	end
snippet fori
	for ${1:i},${2:v} in ipairs(${3:table_name}) do
		${0:-- body}
	end
snippet repeat
	repeat
		${1:--body}
	until ${0:condition}
snippet while
	while ${1:condition} do
		${0:--body}
	end
snippet print
	print("${1:string}")
snippet im
	import "${1:import file}"
