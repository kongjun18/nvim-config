{
	"coc.preferences.rootPatterns": [".root", "Cargo.toml", "compile_commands.json", ".vs", ".git"],
    "suggest.echodocSupport": true,
    "diagnostic.displayByAle": true,
    "diagnostic.errorSign": "‚úñ",
    "diagnostic.warningSign": "‚ö†Ô∏è ",
    "diagnostic.hintSign": "üí°",
	"languageserver": {
		"cmake": {
			"command": "cmake-language-server",
			"filetypes": ["cmake"],
			"rootPatterns": [".git", ".root", "compile_commands.json"],
			"initializationOptions": {
				"buildDirectory": "_build"
			}
		},
		"lua": {
			"cwd": "/usr/local/src/lua-language-server",
			"command": "/usr/local/src/lua-language-server/bin/Linux/lua-language-server",
			"args": ["-E", "-e", "LANG=en", "/usr/local/src/lua-language-server/main.lua"],
			"filetypes": ["lua"],
			"rootPatterns": [".git/", ".root"],
			"settings": {
				"Lua": {
					"runtime": {
						"version": "Lua 5.1"
					},
					"diagnostics": {
						"enable": true
					}
				}
			}
		},
		"ccls": {
			"command": "ccls",
			"filetypes": ["c", "cc", "cpp", "c++"],
			"rootPatterns": [".root", ".ccls", "compile_commands.json", ".git/"],
			"initializationOptions": {
				"cache": {
					"directory": ".cache/ccls"
				},
                "index": {
                    "comments": 1
                },
                // Only support GCC/Clang
                "clang": {
                    "extraArgs": ["-Wall", "-Wextra", "-Wconversion", "-Wsign-conversion"]
                },
                "highlight": {"lsRanges": true }
			}
		}
	},
	"suggest.enablePreview": true
}
